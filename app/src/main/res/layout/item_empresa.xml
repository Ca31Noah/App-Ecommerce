<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F2F2F2">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#018786">

        <ImageView
            android:id="@+id/imageViewEmpresa"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#018786 ">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de la Empresa"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPropietario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Propietario"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:shadowColor="#BFBFBF"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:shadowColor="#BFBFBF"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"/>

            <TextView
                android:id="@+id/tvContacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contacto"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:shadowColor="#BFBFBF"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"/>

            <TextView
                android:id="@+id/tvDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DirecciÃ³n"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:shadowColor="#BFBFBF"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"/>

            <Button
                android:id="@+id/btnVerProductosServicios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Ver Productos"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF6200EE"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
